<%- include('partials/header') %>

<%- include('partials/nav') %>



<section class="container-all w-4/5">
    <article class="bg-slate-100 rounded-lg p-5">
        <h1 style="font-size: 2em;">Ajouter une catégorie</h1>
        <form action="/admin/addcategory" method="POST">
            <label for="name">Nom de la catégorie</label>
            <input class="inp" type="text" name="name">
            <label for="category_id">Opération</label>
            <select class="inp w-40" name="operation_id" required>
                <option value="1">Débit</option>
                <option value="2">Crédit</option>
                <option value="3">Epargne</option>
            </select>
            <input class="inp" type="color" name="color">
    
            <button class="button-all" type="submit">Ajouter</button>
        </form>
    </article>
    
    <article class="w-4/5">
        <h1 class="font-bold text-3xl my-8">Liste des catégories</h1>
        <div class="flex justify-evenly">
            <% for (const operation of operations){%>
                <div class="flex flex-col w-1/4">
                    <h2 class="mb-6" style="font-size: 2em;"><%= operation.name %></h2>
                    <%for (const category of operation.categories) {%>
                        <div class="flex px-5 mb-2 bg-slate-100 p-2 rounded-md"> 
                        <p class="w-2/3" style="background-color: <%= category.color %>;" href="/admin/category/edit/<%= category.id %>"><%= category.name %></p>
                        <div class="flex justify-center gap-x-4 w-1/3">
                            <a href="/admin/category/edit/<%= category.id %>"><img src="/img/icons/edit.svg" alt=""></a>
                            <a href="/admin/category/delete/<%= category.id %>"><img src="/img/icons/delete.svg" alt=""></a>
                        </div>
                        </div>
                    <%}%>             
                </div>
            <%}%>
        </div>
    </article>
</section>




</body>
</html>